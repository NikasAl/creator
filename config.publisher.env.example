# Конфигурация для публикации видео на видеохостинги
# Скопируйте этот файл в config.publisher.env и заполните своими данными

# OpenRouter API для генерации метаданных через LLM
OPENROUTER_API_KEY=your_openrouter_api_key_here

# Модель для генерации метаданных
DEFAULT_MODEL=meituan/longcat-flash-chat:free
DEFAULT_MAX_TOKENS=2000
DEFAULT_TEMPERATURE=0.3

# YouTube API настройки
# Путь к файлу учетных данных из Google Cloud Console
YOUTUBE_CREDENTIALS_PATH=youtube_credentials.json
# Путь к файлу сохраненных токенов (создается автоматически)
YOUTUBE_TOKEN_PATH=youtube_token.json

# Настройки по умолчанию для публикации
DEFAULT_PRIVACY=private
DEFAULT_CATEGORY=22

# Максимальные длины для метаданных
MAX_TITLE_LENGTH=100
MAX_DESCRIPTION_LENGTH=5000
MAX_TAGS_COUNT=15

# Настройки для других платформ (будут добавлены позже)
# VK_API_KEY=your_vk_api_key_here
# RUTUBE_API_KEY=your_rutube_api_key_here
